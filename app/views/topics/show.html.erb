<section class="slice sct-color-1">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title section-title--style-2 text-center mb-4">
                    <h2 class="section-title-inner heading-2 strong-400">
                    <span>
                    <%=@topic.title%> </span>
                    </h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                <div class="block block-post">
                    <div class="container-fluid">
                        <div class="text-center">
                            <%= image_tag @topic.main_picture, class: "img-responsive rounded" %>
                        </div>
                    </div>
                    <div class="block-body block-post-body">
                        <p class="text-justify">
                            <%=@topic.short_description%>
                        </p>
                    </div>
                    <br><br>
                    <div id="driver_section" class="section-title section-title--style-1 text-center mb-4 ">
                        <h3 class="section-title-inner heading-3 strong-400 ">
                        <span>
                        <%=@topic.driver_section_title%> </span>
                        </h3>
                        <span class="section-title-delimiter clearfix"></span>
                    </div>
                    <p class="text-justify">
                        <%=@topic.driver_section_intro%>
                    </p>
                    <div class="block-body block-post-body">
                        <%= render partial: "dataset", collection: @driver_datasets  %>
                    </div>
                </div>
                <br>
                <div class="container-fluid">
                    <div class="text-center">
                        <%= image_tag @topic.main_picture, class: "img-responsive rounded" %>
