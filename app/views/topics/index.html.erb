<!-- Card storie -->
<!DOCTYPE html>
<html>
    <head>
    </head>
    <body>
        <section class="bg-base-5 slice sct-color-1">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h3 class="heading heading-6 strong-600 text-uppercase mb-0">Sujets</h3>
                    </div>
                </div>

                <span class="space-xs-lg"></span>
                <div class="cols-md-space cols-sm-space cols-xs-space d-flex flex-wrap">
                <% @topics.each do |topic| %>
                        <div class="col-lg-4 mb-5">
                            <div class="card z-depth-2-top h-auto">
                                <div class="card-image">
                                    <div class="view view-first">
                                        <%= link_to topic_path(topic) do %>
                                        <%= image_tag topic.main_picture.variant(resize: "1000x760!") %>
                                        <% end %>
                                    </div>
                                </div>
                                <div class="card-body h-25">
                                    <h3 class="heading heading-5 strong-600 mb-0">
                                        <a href="/topics/<%=topic.id%>"><%=topic.title%></a>
                                    </h3>
                                </div>
                                <div class="card-footer">
                                    <div class="row">
                                        <div class="col">
                                            <div class="block-author">
                                                <div class="author-info">
                                                    <div class="author-name">
                                                        <a href="/topics/<%=topic.id%>"><%=topic.short_description%></a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>    
                                    <div class="col text-right">
                                        <ul class="inline-links inline-links--style-2">
                                            <li>
                                                10 min read
                                            </li>
                                        </ul>
                                    </div> 
                                </div>
                            </div>
                        </div>
                <% end %> 
            </div>
        </section>
    </body>
</html>
