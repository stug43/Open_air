    <div class="card-body">
        <div class="row">
            <div class="col-9">
                <h4 class="card-title">
                <%= dataset.title %>
                </h4>
            </div>
            <ul class="list-inline">
                <li><div class="col-1 text-right">
                    <span class="card-title badge badge-md badge-secondary text-right align-top">Base de donn√©es</span>
                </div></li>
                <li><div class='card-icon-actions text-right col-2 align-top'>
                    <a href="#" class="favorite active" data-toggle="tooltip" data-original-title="Save to favorites"><i class="fa fa-star"></i></a>
                </div></li>
            </ul>    
        </div>
        <p class="card-text"> <%= dataset.description %> </p>
