    <div class="card-body">
        <div class="row align-items-center">
            
            <div class="col-10">
                <h4 class="card-title">
                <%= dataset.title %>
                </h4>
            </div>
            <div class="col-2 text-right">
                <span class="card-title badge badge-md badge-secondary text-right">Base de donn√©es</span>
            </div>
            
        </div>
        <p class="card-text"> <%= dataset.description %> </p>
        <%= button_to "Source", dataset.db_link , class: "btn btn-styled btn-sm btn-green" %>
    </div>
    <% if dataset.rendered %>
    <iframe class="w-100" height="700" src="<%= dataset.db_link %>" frameBorder="0"></iframe>
