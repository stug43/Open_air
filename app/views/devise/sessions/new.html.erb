<%= form_for(resource,  url: session_path(resource_name)) do |f| %>
<body class="slice-lg has-bg-cover bg-size-cover" style="background-image: url(<%= asset_path('air-quality-banner/background1.jpg')%>); background-repeat: no-repeat; background-size: cover; background-position: center;">
  <section id="top" class="container">

    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div>
              <%= link_to root_path do %>
              <%= image_tag asset_path("air-quality-logo/logo-1-a.svg"), height:"60px", alt:"Open Air", class:"mb-3" %>
              <% end %><br>
              <br>
            </div>
          </div>
          <div class="form-body">
            <div class="section-title section-title--style-2 text-center mb-2">
              <h4 class="section-title-inner heading-2 strong-400 text-dark">
              <span>Se Connecter</span>
              </h4>
            </div>
            <form class="form-default" role="form">
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <div class="input-group input-groupe--style-1">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>

                    </div>
                  </div>
                </div>
              </div>
                <div class="row">
                  <div class="col-12">
                    <div class="form-group">
                      <%= f.label :Mot_de_passe %><br />
                      <div class="input-group input-groupe--style-1">
                        <%= f.password_field :password, autofocus: true, autocomplete: "current_password", class: "form-control form-control-lg" %>
                      </div>
                    </div>
                    <%= f.check_box :remember_me %>
                    <%= f.label :Se_souvenir_de_moi %>
                  </div>
                </div>
                <div class="row align-items-center">
                  <div class="col-md-12 mt-4 text-center">
                        <%= f.submit "Se connecter", class:"btn btn-styled btn-base-1 px-4" %>
                        <% if devise_mapping.rememberable? %>
                      <div class="mt-3">
                        <%= render "devise/shared/forgott_pwd_link" %>
                      </div>
                  </div>
                </div>
                <div class="text-center">
                  <%= render "devise/shared/links" %>
                </div>
                <% end %>
                <% end %>
              </form>
            </div>
          </div>
          
        </div>
        
        <div class="col-4 align-self-center">
          <div>

            <div class="card-body">
              <%= link_to user_facebook_omniauth_authorize_path do%>
              <div class="btn-lg btn-block btn-social btn-facebook">
                <i class="fa fa-facebook"></i> Sign in with Facebook
              </div>
              <% end %><br>
              <%= link_to user_google_oauth2_omniauth_authorize_path do%>
              <div class="btn-lg btn-block btn-social btn-google">
                <i class="fa fa-google"></i> Sign in with Google
              </div>
              <% end %><br>
              <%= link_to user_twitter_omniauth_authorize_path do%>
              <div class="btn-lg btn-block btn-social btn-twitter">
                <i class="fa fa-twitter"></i> Sign in with Twitter
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</section>
</body>
