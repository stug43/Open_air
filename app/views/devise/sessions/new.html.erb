<%= form_for(resource,  url: session_path(resource_name)) do |f| %>
<section class="slice-lg has-bg-cover bg-size-cover">
  <div id="top" class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div>
              <%= image_tag asset_path("air-quality-logo/logo-1-a.svg"), height:"60px", alt:"Open Air" %><br>
              <br>
            </div>
          </div>
          <div class="form-body">
            <div class="section-title section-title--style-2 text-center mb-2">
              <h4 class="section-title-inner heading-2 strong-400 text-dark">
                <span>Se Connecter</span>
              </h4>
            </div>
            <form class="form-default" role="form">
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :email %><br />
                    <div class="input-group input-groupe--style-1">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :Mot_de_passe %><br />
                    <div class="input-group input-groupe--style-1">
                      <%= f.password_field :password, autofocus: true, autocomplete: "current_password", class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row align-items-center">
                <div class="col-md-6">
                  <%= render "devise/shared/forgott_pwd_link" %>
                  <%= render "devise/shared/links" %>
                </div>
                <div class="col-md-6 mt-4 text-right">
                  <%= f.submit "Se connecter", class:"btn btn-styled btn-base-1 px-4" %>
                   
                </div>
              </div>
              <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :Se_souvenir_de_moi %>
              </div>
              <% end %>
              <% end %>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>