<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="col-md-4 mx-auto my-4">
  <div class="card">
    <div class="card-title px-4">
      <h2 class="heading heading-5 strong-500">
      Se connecter
      </h2>
    </div>
    <div class="card-body px-4">
      <form class="form-default" role="form">
        <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%= f.label :email %><br />
              <div class="input-group input-groupe--style-1">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-lg" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-12">
            <div class="form-group">
              <%= f.label :Mot_de_passe %><br />
              <div class="input-group input-groupe--style-1">
                <%= f.password_field :password, autofocus: true, autocomplete: "current_password", class: "form-control form-control-lg" %>
              </div>
            </div>
          </div>
        </div>
        <div class="row align-items-center">
          <div class="col-md-6">
            <%= render "devise/shared/forgott_pwd_link" %>
            <%= render "devise/shared/links" %>
          </div>
          <div class="col-md-6 text-right">
            <%= f.submit "Se connecter", class:"btn btn-styled btn-base-1 px-4" %>
          </div>
        </div>
        
        <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :Se_souvenir_de_moi %>
        </div>
        <% end %>
        
        <% end %>
        
      </div>
    </div>
  </div>