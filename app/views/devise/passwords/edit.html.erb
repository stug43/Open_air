<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= f.hidden_field :reset_password_token %>
<section class="slice-lg has-bg-cover bg-size-cover">
  <div id="top" class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div>
              <%= image_tag asset_path("air-quality-logo/logo-1-a.svg"), height:"60px", alt:"Open Air" %><br>
              <br>
            </div>
          </div>
          <div class="form-body">
            <div class="section-title section-title--style-2 text-center mb-2">
              <h4 class="section-title-inner heading-2 strong-400 text-dark">
              <span>Changer son mot de passe</span>
              </h4>
            </div>
            <form class="form-default" role="form">
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                    <%= f.label :password, "Nouveau mot de passe" %><br />
                                            <% if @minimum_password_length %>
                                              <small class="font-italic">(<%= @minimum_password_length %> caract√®res minimum)</small><br />
                                            <% end %><br />
                    <div class="input-group input-groupe--style-1">
                      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-12">
                  <div class="form-group">
                      <%= f.label :password_confirmation, "Confirmer mot de passe" %><br />
                    <div class="input-group input-groupe--style-1">
                      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-lg" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="row align-items-center">
                  <%= f.submit "Sauvegarder", class: "btn btn-styled btn-lg btn-block btn-base-1 mt-4"%>
              </div>
		

              <% end %>

            </form>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
