<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<body class="slice-lg has-bg-cover bg-size-cover" style="background-image: url(<%= asset_path('air-quality-banner/background1.jpg')%>); background-repeat: no-repeat; background-size: cover; background-position: center;">
  <%= render "devise/shared/error_messages", resource: resource %>
<section class="slice-lg has-bg-cover bg-size-cover">
  <div id="top" class="container">
    <div class="row justify-content-center cols-xs-space">
      <div class="col-lg-6">
        <div class="form-card form-card--style-2 z-depth-2-top">
          <div class="form-header text-center">
            <div>
              <div>
                <%= link_to root_path do %>
                <%= image_tag asset_path("air-quality-logo/logo-1-a.svg"), height:"60px", alt:"Open Air", class:"mb-3" %>
                <% end %><br>
                <br>
              </div>
            </div>
          </div>
          <div class="form-body">
            <div class="section-title section-title--style-2 text-center mb-2">
              <h4 class="section-title-inner heading-2 strong-400 text-dark">
              <span>Retrouvez votre compte</span>
              </h4>
            </div>
            <form class="form-default" role="form">
              <div class="col">
                <div class="align-items-center">
                  <div class="form-group">
                    <div class="input-group input-groupe--style-1">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Votre email" %>
                        <%= f.submit "Envoyer", class: "btn btn-styled btn-lg btn-block btn-base-1 mt-4"%>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </form>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>



