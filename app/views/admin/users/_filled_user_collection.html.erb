<table class="table table-sm table-hover my-5">
  <tbody>
    <% @users.each_with_index do |user, index| %>
    <tr>
      <td>
        <%= user.first_name + user.last_name %> 
      </td>
      <td>
        <span class="badge badge--2 mr-4">
          <i class="bg-blue"></i><%= link_to "Edit", edit_admin_user_path(user), class: "text-dark" %>
        </span>
      </td>
      <td>
        <%= link_to admin_user_path(user), method: :delete, :remote => true, :class => 'delete_user' do %>
        <i class="ion-trash-a"></i>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

